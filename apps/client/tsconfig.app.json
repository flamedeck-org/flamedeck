{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "useDefineForClassFields": true,
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting - Keep app-specific overrides */
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": false,
    "noFallthroughCasesInSwitch": false,

    /* Keep app-specific paths relative to its baseUrl (now inherited) */
    "paths": {
      "@/*": ["./src/*"] // This path is now relative to apps/client
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"] // Good practice to exclude dist
}
