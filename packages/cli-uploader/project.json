{
  "name": "@flamedeck/cli-uploader",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/cli-uploader/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "packages/cli-uploader/dist",
        "main": "packages/cli-uploader/src/main.ts",
        "tsConfig": "packages/cli-uploader/tsconfig.lib.json",
        "assets": ["packages/cli-uploader/*.md"],
        "platform": "node",
        "bundle": true,
        "format": ["cjs"]
      }
    },
    "build:executable": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "cwd": "packages/cli-uploader",
        "command": "pkg dist/main.cjs --targets node18-linux-x64,node18-macos-x64,node18-win-x64 --output bin/flamedeck-upload"
      }
    }
  }
}
